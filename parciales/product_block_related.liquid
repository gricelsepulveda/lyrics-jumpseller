<a href="{{ prod.url }}" class="product-block__anchor" title="{% t "Go to" %} {{ prod.name }}">
  {% if prod.images.size == 0 %}
  <img src="{{ 'product-block-no-image.jpg' | asset }}" class="product-block__anchor-image" alt="{{ prod.name }}">
  {% elsif prod.images.size > 0 %}
  <img src="{{ prod.images.first | resize:'300x300' }}" class="product-block__anchor-image" alt="{{ prod.name }}">
  {% endif %}
</a>

<h1 class="product-block__name" itemprop="name">{{ prod.name }}</h1>

<h2 class="product-block__price  less-margin">
  {% if prod.discount > 0 %}
  {{ prod.price | minus:prod.discount | price | replace:'USD','<em>USD</em>' }}
  <small class="product-block__price-old">{% t "Before" %} {{ prod.price | price }}</small>
  {% else %}
  {{ prod.price | price | replace:'USD','<em>USD</em>' }}
  {% endif %}
</h2>

<a href="{{ prod.url }}" class="product-block__view-details" title="{% t "See more details" %}">{% t "See more details" %}</a>
