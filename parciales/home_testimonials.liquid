<!-- Heading -->
<div class="small-12  columns  text-center  testimonials-heading">
  <h2 class="testimonials-heading__title">
    {% if options.testimonials_title != blank %}
    {{ options.testimonials_title }}
    {% else %}
    {% t "We have been mentioned in" %}
    {% endif %}
  </h2>
</div>
<!-- end .testimonials-heading -->

