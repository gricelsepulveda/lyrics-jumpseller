<!-- Testimonials Script -->
<script type="application/javascript">
  $(document).ready(function(){
    $('#testimonials-quotes').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '#testimonials-logos'
    });
    $('#testimonials-logos').slick({
      slidesToShow: 5,
      slidesToScroll: 1,
      asNavFor: '#testimonials-quotes',
      dots: true,
      arrows: false,
      centerMode: true,
      focusOnSelect: true
    });
  });
</script>
