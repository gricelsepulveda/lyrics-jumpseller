<div id="slider">
  {% if options.enable_slide_1 == true %}
  <!-- Slide 1 -->
  <div id="slider_block_1" class="slider-block">
    <div class="row  slider-block__wrapper" data-equalizer="slider-block-1" data-equalize-on="medium">
      <div class="small-12  medium-6  large-6{% if options.slide_1_alignment == 'Right' %}  large-push-6{% endif %}  columns  text-center  large-text-left  slider-block__content" data-equalizer-watch="slider-block-1">
        <div class="slider-block__content-wrapper">
          <div class="slider-block__content-wrapper-cell">
             {% if options.slide_1_title != blank %}
              <h2 class="slider-block__title">{{ options.slide_1_title }}</h2>
            {% endif %}
            {% if options.slide_1_text != blank %}
              <div class="slider-block__text">{{ options.slide_1_text }}</div>
            {% endif %}
            {% if options.enable_slide_1_button_1 == true and options.slide_1_button_1_text != blank %}
              <a href="{{ options.slide_1_button_1_link }}" class="button  circular  white  slider-block__button  slider-block__button--first" title="{{ options.slide_1_button_1_text }}">{{ options.slide_1_button_1_text }}</a>
            {% endif %}
            {% if options.enable_slide_1_button_2 == true and options.slide_1_button_2_text != blank %}
            <a href="{{ options.slide_1_button_2_link }}" class="button  circular  bordered  white  slider-block__button  slider-block__button--second" title="{{ options.slide_1_button_2_text }}">{{ options.slide_1_button_2_text }}</a>
            {% endif %}
          </div>
          <!-- end .slider-block__content-wrapper-cell -->
        </div>
        <!-- end .slider-block__content-wrapper -->
      </div>
      <!-- end .slider-block__content -->

      {% if options.slide_1_image != blank %}
      <div class="small-12  medium-6  large-6{% if options.slide_1_alignment == 'Right' %}  large-pull-6{% endif %}  columns  slider-block__image" data-equalizer-watch="slider-block-1">
        <img src="{{ options.slide_1_image }}" class="slider-block__image-object" alt="{{ options.slide_1_title }}">
      </div>
      <!-- end .slider-block__image -->
      {% else %}
      <div class="small-12  medium-6  large-6{% if options.slide_1_alignment == 'Right' %}  large-pull-6{% endif %}  columns  slider-block__image" data-equalizer-watch="slider-block-1">
        <img src="{{ 'slider-image-demo.png' | asset }}" class="slider-block__image-object" alt="{{ options.slide_1_title }}">
      </div>
      {% endif %}
    </div>
    <!-- end .row -->
  </div>
  <!-- end #slider_block_1 -->
