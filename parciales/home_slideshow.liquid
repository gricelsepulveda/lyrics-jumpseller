<!-- Slider Script -->
<script type="application/javascript">
  $(document).ready(function(){
    $('#slider').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows:  {% if options.slider_arrows == true %}true{% elsif options.slider_arrows == false %}false{% endif %},
      dots: true,
      fade: {% if options.slider_transition == 'Fade' %}true{% elsif options.slider_transition == 'Carousel' %}false{% endif %},
      cssEase: 'linear',
      speed: 500,
      autoplay: {% if options.slider_autoplay == true %}true{% elsif options.slider_autoplay == false %}false{% endif %},
      autoplaySpeed: {% if options.slider_autoplay_speed != blank %}{{ options.slider_autoplay_speed }}{% else %}6000{% endif %},
      pauseOnHover: false,
      pauseOnDotsHover: true
    });
  });
</script>
<!-- end Slider Script -->
