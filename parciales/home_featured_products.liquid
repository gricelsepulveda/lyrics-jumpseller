<!-- Heading -->
<div class="small-12  columns  text-center  page-heading">
  <h2 class="page-heading__title">
    {% if options.featured_products_title != blank %}
    {{ options.featured_products_title }}
    {% else %}
    {% t "Our favorite ones" %}
    {% endif %}
  </h2>
  {% if options.featured_products_text != blank %}
  <p class="page-heading__text">{{ options.featured_products_text }}</p>
  {% endif %}
</div>
<!-- end .page-heading -->

{% for product in products.featured limit: options.products_featured_limit %}
<div class="small-12  medium-4  large-4  columns  text-center  product-block">
  {% include 'product_block' %}
</div>
<!-- end .product-block -->
{% endfor %}

{% if options.featured_products_button_link != blank %}
<div class="small-12  columns  text-center  featured-products__actions">
  <a href="{{ options.featured_products_button_link }}" class="button  blue  circular  featured-products__actions-button" title="{{ options.featured_products_button_text }}">{{ options.featured_products_button_text }} <i class="fa fa-arrow-right fa-fw"></i></a>
</div>
<!-- end .featured-products__actions -->
{% endif %}
