
/* ====================================================================================
  SLIDESHOW
==================================================================================== */
/*  Slides Color Assignment
==================================================================================== */
{% if options.enable_slide_1 %}
/*  Slide 1  */
#slider_block_1 {background-color: {{ options.slide_1_background }};}
{% if options.slide_1_background_image != blank %}
#slider_block_1 {background-image: url("{{ options.slide_1_background_image }}");}
{% endif %}
#slider_block_1 .slider-block__title {color: {{ options.slide_1_title_color }};}
#slider_block_1 .slider-block__text {color: {{ options.slide_1_text_color }};}
#slider_block_1 .slider-block__button--first {color: {{ options.slide_1_button_1_text_color }}; background: {{ options.slide_1_button_1_background }};}
#slider_block_1 .slider-block__button--second {color: {{ options.slide_1_button_2_text_color }}; border-color: {{ options.slide_1_button_2_text_color }};}
{% endif %}
@media only screen and (max-width: 768px) {
  #slider_block_1,#slider_block_2,#slider_block_3,#slider_block_4 { background-position: center center; background-size: cover !important;}
}
