<!-- Blog Page -->
<div id="blog-page" class="row  row-large">
  
  <div class="banner-blog"><div>
    
  <!-- Page Heading -->
  <section class="small-12  columns  text-center  page-heading">
    <h1 class="page-heading__title">{{ page.title }}</h1>
    <h2 class="page-heading__text  page-heading__text--half  roboto">{{ page.body }}</h2>
  </section>
  <!-- end .page-heading -->

  <!-- Blog Page Gallery -->
  <section class="small-12  columns  blog-page__gallery">
    <div class="row  small-up-1  medium-up-2" data-equalizer data-equalize-by-row="true">
      {% if pages.categories.category["Post"] %}
        {% paginate pages.categories.category["Post"].pages by options.blog_posts_limit %}
        {% for page in paged.pages reversed %}
        <article class="small-12  medium-6  large-6  columns  text-center  post-block{% if forloop.last %}  end{% endif %}">
          {% include 'blog_post' %}
        </article>
        <!-- end .post-block -->
        {% endfor %}

        {% if pages.categories.category["Post"].pages.size > options.blog_posts_limit %}
        <div class="small-12  columns  text-center  gallery-pager">
          {{ pager }}
        </div>
        <!-- end .gallery-pager -->
        {% endif %}
        {% endpaginate %}
      {% endif %}
    </div>
    <!-- end .row -->
  </section>
  <!-- end .blog-page__gallery -->
</div>
<!-- end #blog-page -->
